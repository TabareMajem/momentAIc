# MomentAIc Production Environment Template
# Copy to .env and fill in all values marked with CHANGE_ME
# ================================

# Application
APP_NAME=MomentAIc
APP_ENV=production
DEBUG=false
SECRET_KEY=CHANGE_ME_secure_random_string_min_32_chars
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8839
WORKERS=2

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://momentaic:CHANGE_ME_db_password@postgres:5432/momentaic
POSTGRES_USER=momentaic
POSTGRES_PASSWORD=CHANGE_ME_db_password
POSTGRES_DB=momentaic
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=5

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# JWT Auth (CRITICAL: Change these!)
JWT_SECRET_KEY=CHANGE_ME_jwt_secret_min_32_chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Providers (at least GOOGLE_API_KEY required)
GOOGLE_API_KEY=CHANGE_ME
ANTHROPIC_API_KEY=CHANGE_ME
OPENAI_API_KEY=CHANGE_ME
DEEP_SEEK_KEY=CHANGE_ME

# External APIs (optional, for enhanced agent capabilities)
SERPER_API_KEY=CHANGE_ME
TAVILY_API_KEY=CHANGE_ME

# Stripe Billing
STRIPE_SECRET_KEY=CHANGE_ME
STRIPE_PUBLISHABLE_KEY=CHANGE_ME
STRIPE_WEBHOOK_SECRET=CHANGE_ME
STRIPE_STARTER_PRICE_ID=price_1SZwUFCm2Xw209Q2c0VX7iia
STRIPE_GROWTH_PRICE_ID=price_1SfzCPCm2Xw209Q2x740sgsf
STRIPE_GOD_MODE_PRICE_ID=price_1SZwUrCm2Xw209Q2GWdiiYv6


# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=CHANGE_ME_email@gmail.com
SMTP_PASSWORD=CHANGE_ME_app_password
SMTP_FROM_EMAIL=noreply@momentaic.com
SMTP_FROM_NAME=MomentAIc

# OAuth Integrations (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
