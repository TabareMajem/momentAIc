# MomentAIc Backend Configuration
# ================================

# Application
APP_NAME=MomentAIc
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/momentaic
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT Auth
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Providers
GOOGLE_API_KEY=your-google-gemini-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# External APIs
SERPER_API_KEY=your-serper-api-key
TAVILY_API_KEY=your-tavily-api-key

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_STARTER_PRICE_ID=price_starter
STRIPE_GROWTH_PRICE_ID=price_growth
STRIPE_GOD_MODE_PRICE_ID=price_god_mode

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@momentaic.com
SMTP_FROM_NAME=MomentAIc

# GitHub Integration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# LinkedIn Integration
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Credits Configuration
DEFAULT_STARTER_CREDITS=50
DEFAULT_GROWTH_CREDITS=500
DEFAULT_GOD_MODE_CREDITS=5000
CREDIT_COST_SIGNAL_CALC=5
CREDIT_COST_AGENT_CHAT=1
CREDIT_COST_CONTENT_GEN=3
CREDIT_COST_OUTREACH_GEN=2
CREDIT_COST_VISION_PORTAL=20
CREDIT_COST_FORGE_RUN=10

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://momentaic.com"]

# Sentry (Error Tracking)
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
